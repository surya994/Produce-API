@{
    ViewData["Title"] = "Data Employee";
}
<div class="container my-3">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#formInput">Tambah</button>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover table-sm nowrap" width=100% id="tableEmployee">
            <thead class="thead-dark">
                <tr>
                    <th>No</th>
                    <th>NIK</th>
                    <th>Full Name</th>
                    <th>Gender</th>
                    <th>Birth Date</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Degree</th>
                    <th>GPA</th>
                    <th>University</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="modal" id="formInput">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title">Form Input</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form class="needs-validation" novalidate>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" id="firstName" required>
                            <div class="invalid-feedback"> Harap Input First Name</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" id="lastName" required>
                            <div class="invalid-feedback"> Harap Input Last Name</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="birthDate">Birth Date</label>
                            <input type="date" class="form-control" id="birthDate" required>
                            <div class="invalid-feedback"> Harap Input Birth Date</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="gender">Gender</label>
                            <select class="custom-select" id="gender" required>
                                <option selected disabled value="">Choose...</option>
                                <option value="0">Male</option>
                                <option value="1">Female</option>
                            </select>
                            <div class="invalid-feedback"> Harap Pilih Gender</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="phone">Phone Number</label>
                            <input type="number" class="form-control" id="phone" required>
                            <div class="invalid-feedback"> Harap Input Phone Number</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="salary">Salary</label>
                            <input type="number" class="form-control" id="salary" required>
                            <div class="invalid-feedback"> Harap Input Salary</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="university">University</label>
                            <select class="custom-select" id="university" required>
                                <option selected disabled value="">Choose...</option>
                            </select>
                            <div class="invalid-feedback"> Harap Input University</div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="degree">Degree</label>
                            <select class="custom-select" id="degree" required>
                                <option selected disabled value="">Choose...</option>
                                <option value="D3">D3</option>
                                <option value="D4">D4</option>
                                <option value="S1">S1</option>
                                <option value="S2">S2</option>
                            </select>
                            <div class="invalid-feedback"> Harap Pilih Degree</div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="gpa">GPA</label>
                            <input type="number" step=0.01 class="form-control" id="gpa" required>
                            <div class="invalid-feedback"> Harap Input GPA</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" required>
                            <div class="invalid-feedback"> Harap Input Email</div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" required>
                            <div class="invalid-feedback"> Harap Input Password</div>
                        </div>
                    </div>
                    <div class="text-center">
                        
                        <button class="btn btn-primary" id="submitButton" type="submit">Register</button>
                    </div>
                    
                </form>
            </div>
            <!-- Modal footer 
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
            -->
         </div>
    </div>
</div>